<div class='flex flex-col gap-3 items-center p-10 text-[#0C2D57]'>
<%= render partial: 'form', locals:{
    post: @post
} %>


    <span class='bg-[#e21313] text-white rounded py-3 px-5 mt-6'>
        
<%# check if the post belongs to the authenticated user, if it is the case, display delete button %>
<% if @post.user == current_user %>
    <%= link_to 'Delete', post_path(@post), method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>

</div>

</div>